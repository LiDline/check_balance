{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "../*": ["src/*"],
      "shared/*": ["node_modules/shared/dist/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
